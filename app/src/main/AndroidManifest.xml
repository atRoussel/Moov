<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.epf.moov" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_moov"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_moov"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
         <activity
            android:name=".FavorisActivity"
            android:label="Favoris" />
        <activity
            android:name=".RechercheHorairesActivity"
            android:label="Horaires" />
        <activity
            android:name=".ListesActivity"
            android:label="Liste des métros" />
        <activity
            android:name=".QRCodeActivity"
            android:label="QR Code" />
        <activity
            android:name=".DetailLineActivity"
            android:label="Details de la ligne" />
        <activity
            android:name=".AfficherHorairesActivity"
            android:label="Horaires2" />
        <activity
            android:name=".DetailStationActivity"
            android:label="Détails de la station" />
        <activity
            android:name=".ScheduleActivity"
            android:label="Horaires3" />
        <activity android:name=".SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name" />
    </application>

</manifest>